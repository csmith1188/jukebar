    <script>
          let userPermissions = 5; //Set user permissions (adjust as needed)
          let playSounds = true; 
        let currentPage = 1;
        const totalPages = document.querySelectorAll('.button-page').length;


        function updatePage() {
            document.querySelectorAll('.button-page').forEach((page, index) => {
                page.style.display = (index + 1 === currentPage) ? 'block' : 'none';
            });


            document.getElementById('prevPage').disabled = currentPage === 1;
            document.getElementById('nextPage').disabled = currentPage === totalPages;
        }


        document.getElementById('prevPage').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                updatePage();
            }
        });


        document.getElementById('nextPage').addEventListener('click', () => {
            if (currentPage < totalPages) {
                currentPage++;
                updatePage();
            }
        });


        function playSound(src) {
            const audio = new Audio(src);
            audio.play().catch(error => {
                console.error('Error playing sound:', error);
            });
        }

        window.onload = () => {
            updatePage();
        
            document.querySelectorAll('.sound').forEach(button => {
                button.addEventListener('click', (event) => {
                    if (userPermissions >= 2 && playSounds) {
                        playSound(`/sfx/${event.target.id}.mp3`);
                    } else {
                        alert('You do not have permission to play sounds');
                    }
                });
            });
        };
    </script>
